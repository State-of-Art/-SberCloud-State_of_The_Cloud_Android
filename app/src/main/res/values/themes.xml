<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="StateOfTheCloud" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryVariant">@color/light</item>
        <item name="colorOnPrimary">@color/green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="StateOfTheCloud.TextView" parent="android:Widget.Material.TextView">
        <item name="android:fontFamily">@font/sbsans_text_regular</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="StateOfTheCloud.EditText" parent="android:Widget.Material.EditText">
        <item name="android:fontFamily">@font/sbsans_text_regular</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="StateOfTheCloud.Button" parent="android:Widget.Material.Button.Borderless.Small">
        <item name="android:fontFamily">@font/sbsans_text_regular</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

</resources>