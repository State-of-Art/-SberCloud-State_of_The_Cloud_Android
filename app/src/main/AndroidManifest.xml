<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="club.plus1.state_of_the_cloud">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".view_tools.App"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/StateOfTheCloud"
        tools:ignore="AllowBackup">
        <activity
            android:name=".view_activity.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view_activity.DashboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view_activity.RecoveryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view_activity.HotLineActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view_activity.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view_activity.WebActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>